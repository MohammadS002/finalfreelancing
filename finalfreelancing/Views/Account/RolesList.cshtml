@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "RolesList";
}

<h1>RolesList</h1>

<p>
    <a asp-action="CreateRole">Create New</a>
</p>

@foreach (var role in Model) {

<div class="card">
    <div class="card-header">

    </div>
    <div class="card-body">
        @role.Name
    </div>
</div>
        
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@role.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>

    </div>
              
}
  
